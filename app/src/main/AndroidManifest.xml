<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.washington.mxl.quizdroid" >

    <application
        android:name=".QuizApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Descr"
            android:label="@string/title_activity_descr" >
        </activity>
        <activity
            android:name=".Questions"
            android:label="@string/title_activity_questions" >
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name=".SummaryActivity"
            android:label="@string/title_activity_summary" >
        </activity>
        <activity
            android:name=".FragmentContainer"
            android:label="@string/title_activity_fragment_container" >
        </activity>
        <activity
            android:name=".FragmentsPlaceholder"
            android:label="@string/title_activity_fragments_placeholder" >
        </activity>
        <activity
            android:name=".FragmentsHolder"
            android:label="@string/title_activity_fragments_holder" >
        </activity>
        <activity
            android:name=".SettingActivities"
            android:label="@string/title_activity_setting_activities" >
        </activity>

        <receiver android:name=".AlarmReceiver"></receiver>
    </application>

</manifest>
